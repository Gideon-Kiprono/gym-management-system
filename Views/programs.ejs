<body>
 <%-include("__header.ejs")%>

 <section class="section4">
<h2>Our Prices</h2>
<div id="data-container" class="card-container">
    <% plans.forEach(item => { %>
      <div class="card">
        <h3><%= item.plan_name %></h3>
        <p>Amount: <%= item.amount  %></p>
        <!-- <p>Duration: <%= item.duration %></p> -->
        <p>Description: <%= item.description %></p>
        <button type="button" id="checkout">Select</button>
      </div>
    <% }); %>
  </div>
  </section>
  <%- include('__footer.ejs') %>
